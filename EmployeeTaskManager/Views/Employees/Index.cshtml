@model IEnumerable<EmployeeTaskManager.Models.Employee>

@{
    ViewData["Title"] = "Employees";
}

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f2f6f9;
    }

    .responsive-table {
        width: 100%;
        border-collapse: collapse;
        background: #fff;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 8px 20px rgba(0,0,0,0.05);
    }

    .responsive-table__row {
        display: grid;
        grid-template-columns: 2fr 2fr 1fr 1fr;
        padding: 15px 20px;
        border-bottom: 1px solid #edeef2;
        align-items: center;
    }

    .responsive-table__head {
        background: #e1e8f2;
        font-weight: 600;
    }

    .responsive-table__head__title {
        text-transform: capitalize;
    }

    .responsive-table__body__row:last-child {
        border-bottom: none;
    }

    .responsive-table__row:hover {
        background-color: #f8fafc;
    }

    .responsive-table__body__text {
        display: flex;
        align-items: center;
    }

    .user-icon {
        width: 40px;
        height: 40px;
        margin-right: 12px;
    }

    .status-indicator {
        width: 14px;
        height: 14px;
        border-radius: 50%;
        margin-right: 8px;
        display: inline-block;
    }

    .status-indicator--active {
        background-color: #25be64;
    }

    .status-indicator--inactive {
        background-color: #dadde4;
    }

    .action-link {
        text-decoration: none;
        font-weight: 500;
    }

    .edit-link {
        color: #0d6efd;
    }

    .delete-link {
        color: #dc3545;
    }

    .action-link:hover {
        text-decoration: underline;
    }

</style>

<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet" />

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Employee Management</h2>
        <a class="btn btn-primary px-4" asp-action="Create">
            + Add Employee
        </a>
    </div>

    <table class="responsive-table">
        <thead class="responsive-table__head">
            <tr class="responsive-table__row">
                <th class="responsive-table__head__title responsive-table__head__title--name">Name</th>
                <th class="responsive-table__head__title responsive-table__head__title--email">Email</th>
                <th class="responsive-table__head__title responsive-table__head__title--status">Status</th>
                <th class="responsive-table__head__title responsive-table__head__title--action">Action</th>
            </tr>
        </thead>

        <tbody class="responsive-table__body">
            @foreach (var e in Model)
            {
                <tr class="responsive-table__row">
                    <td class="responsive-table__body__text responsive-table__body__text--name">
                        <img class="user-icon"
                             src="https://cdn-icons-png.flaticon.com/64/3135/3135715.png"
                             alt="user" />
                        @e.Name
                    </td>

                    <td class="responsive-table__body__text responsive-table__body__text--email">
                        @e.Email
                    </td>

                    <td class="responsive-table__body__text responsive-table__body__text--status">
                        <span class="status-indicator @(e.IsActive ? "status-indicator--active" : "status-indicator--inactive")"></span>
                        @(e.IsActive ? "Active" : "Inactive")
                    </td>

                    <td class="responsive-table__body__text responsive-table__body__text--action">
                        <a asp-action="Edit" asp-route-id="@e.Id" class="action-link edit-link">Edit</a>
                        <span class="mx-2">|</span>
                        <a asp-action="Delete"
                           asp-route-id="@e.Id"
                           class="action-link delete-link"
                           onclick="return confirm('Are you sure you want to delete this employee?')">
                            Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
