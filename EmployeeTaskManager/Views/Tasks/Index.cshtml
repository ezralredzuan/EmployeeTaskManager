@model IEnumerable<EmployeeTaskManager.Models.TaskItem>

@{
    ViewData["Title"] = "Tasks";
}
<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f2f6f9;
    }

    .responsive-table {
        width: 100%;
        border-collapse: collapse;
        background: #fff;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 8px 20px rgba(0,0,0,0.05);
    }

    .responsive-table__row {
        display: grid;
        grid-template-columns: 2fr 2fr 1.5fr 1.5fr 1fr;
        padding: 15px 20px;
        border-bottom: 1px solid #edeef2;
        align-items: center;
    }

    .responsive-table__head {
        background: #e1e8f2;
        font-weight: 600;
    }

    .responsive-table__row:hover {
        background-color: #f8fafc;
    }

    .responsive-table__body__text {
        display: flex;
        align-items: center;
    }

    .user-icon {
        width: 35px;
        height: 35px;
        margin-right: 10px;
    }

    .task-title {
        font-weight: 600;
    }

    .status-indicator {
        width: 14px;
        height: 14px;
        border-radius: 50%;
        margin-right: 8px;
        display: inline-block;
    }

    .status-indicator--pending {
        background-color: #facc15; 

    .status-indicator--progress {
        background-color: #ea580c; 
    }

    .status-indicator--review {
        background-color: #7c3aed; 
    }

    .status-indicator--Complete {
        background-color: #16a34a; 
    }

    .action-link {
        text-decoration: none;
        font-weight: 500;
    }

    .edit-link {
        color: #0d6efd;
    }

    .delete-link {
        color: #dc3545;
    }

    .action-link:hover {
        text-decoration: underline;
    }

    .due-date {
        font-weight: 500;
    }

</style>
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet" />

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Task Management</h2>
        <a class="btn btn-primary px-4" asp-action="Create">
            + Add Task
        </a>
    </div>

    <table class="responsive-table">
        <thead class="responsive-table__head">
            <tr class="responsive-table__row">
                <th class="responsive-table__head__title">Title</th>
                <th class="responsive-table__head__title">Employee</th>
                <th class="responsive-table__head__title">Status</th>
                <th class="responsive-table__head__title">Due Date</th>
                <th class="responsive-table__head__title">Action</th>
            </tr>
        </thead>

        <tbody class="responsive-table__body">
            @foreach (var t in Model)
            {
                <tr class="responsive-table__row">

                    <td class="responsive-table__body__text">
                        <span class="task-title">@t.Title</span>
                    </td>

                    <td class="responsive-table__body__text">
                        <img class="user-icon"
                             src="https://cdn-icons-png.flaticon.com/64/3135/3135715.png"
                             alt="user" />
                        @(t.Employee?.Name ?? "Unassigned")
                    </td>

                    <td class="responsive-table__body__text">
                        @{
                            var statusClass = t.Status switch
                            {
                                "Pending" => "status-indicator--pending",
                                "In Progress" => "status-indicator--progress",
                                "In Review" => "status-indicator--review",
                                "Complete" => "status-indicator--Complete",
                                _ => "status-indicator--pending"
                            };
                        }
                        <span class="status-indicator @statusClass"></span>
                        @t.Status
                    </td>

                    <td class="responsive-table__body__text">
                        <span class="due-date">
                            @t.DueDate.ToString("dd MMM yyyy")
                        </span>
                    </td>

                    <td class="responsive-table__body__text">
                        <a asp-action="Edit"
                           asp-route-id="@t.Id"
                           class="action-link edit-link">Edit</a>

                        <span class="mx-2">|</span>

                        <a asp-action="Delete"
                           asp-route-id="@t.Id"
                           class="action-link delete-link"
                           onclick="return confirm('Are you sure you want to delete this task?')">
                            Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
