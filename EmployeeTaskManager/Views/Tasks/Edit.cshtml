@model EmployeeTaskManager.Models.TaskItem

@{
    ViewData["Title"] = "Task";
}

<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet" />

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f2f6f9;
    }

    .page-header {
        font-weight: 600;
    }

    .form-card {
        background: #ffffff;
        border-radius: 14px;
        box-shadow: 0 8px 20px rgba(0,0,0,0.05);
        padding: 40px;
    }

    .form-label {
        font-weight: 500;
        margin-bottom: 6px;
    }

    .form-control {
        border-radius: 8px;
        padding: 10px 14px;
        border: 1px solid #e3e6ea;
    }

        .form-control:focus {
            box-shadow: none;
            border-color: #0d6efd;
        }

    textarea.form-control {
        min-height: 110px;
        resize: none;
    }

    .btn-primary-custom {
        background-color: #0d6efd;
        border: none;
        padding: 10px 22px;
        border-radius: 8px;
        font-weight: 500;
    }

        .btn-primary-custom:hover {
            background-color: #0b5ed7;
        }

    .btn-secondary-custom {
        background-color: #e9ecef;
        border: none;
        padding: 10px 22px;
        border-radius: 8px;
        font-weight: 500;
        color: #333;
    }

        .btn-secondary-custom:hover {
            background-color: #dfe3e8;
        }
</style>

<div class="container mt-5">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="page-header">
            @(Model.Id == 0 ? "Create Task" : "Edit Task")
        </h2>
        <a asp-action="Index" class="btn btn-secondary-custom">
            ← Back to List
        </a>
    </div>

    <div class="form-card">
        <form method="post">
            <input type="hidden" asp-for="Id" />

            <div class="mb-4">
                <label class="form-label">Task Title</label>
                <input asp-for="Title" class="form-control" required />
            </div>

            <div class="mb-4">
                <label class="form-label">Description</label>
                <textarea asp-for="Description" class="form-control"></textarea>
            </div>

            <div class="mb-4">
                <label class="form-label">Assign Employee</label>
                <select asp-for="EmployeeId" asp-items="ViewBag.Employees" class="form-control" required>
                    <option value="">-- Select Employee --</option>
                </select>
            </div>

            <div class="mb-4">
                <label class="form-label">Task Status</label>
                <select asp-for="Status" class="form-control">
                    <option>Pending</option>
                    <option>In Progress</option>
                    <option>In Review</option>
                    <option>Complete</option>
                </select>
            </div>

            <div class="mb-4">
                <label class="form-label">Due Date</label>
                <input asp-for="DueDate" type="date" class="form-control" required />
            </div>

            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-primary-custom">
                    Save Task
                </button>
            </div>
        </form>
    </div>
</div>
